#Prerequisites: download and unzip the JNA library name: jna-5.14.0.jar; copy folder com to ~/SAFplus_java_deployment
#!/bin/bash
# Assume you're in ~/SAFplus_java_deployment
rm saAmf/*.java saAis/*.java clEoLib/*.java clUtils/*.java
jar cfe myapp.jar ClCompAppMain *
printf '%s\n' '#!/usr/bin/java -jar' | cat - myapp.jar > temp && mv temp myapp.jar
chmod +x myapp.jar
